<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/jesuitas_image"
        android:layout_height="@dimen/jesuitas_image"
        android:src="@drawable/jesuitas_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/jesuitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/jesuitasrioja"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/centro_sagrado"
        android:paddingTop="@dimen/title_padding"
        android:paddingBottom="@dimen/title_padding"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/jesuitas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/logo_padding"
        android:src="@drawable/location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/direccion"
        android:paddingTop="@dimen/texts_padding"
        android:paddingBottom="@dimen/texts_padding"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toRightOf="@+id/location"
        />

    <ImageView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/logo_padding"
        android:src="@drawable/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location" />

    <TextView
        android:id="@+id/correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/texts_padding"
        android:paddingBottom="@dimen/texts_padding"
        android:text="@string/correo"
        app:layout_constraintTop_toBottomOf="@id/direccion"
        app:layout_constraintLeft_toRightOf="@+id/email"
        />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/logo_padding"
        android:src="@drawable/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <TextView
        android:id="@+id/telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telefono"
        android:paddingTop="@dimen/texts_padding"
        android:paddingBottom="@dimen/texts_padding"
        app:layout_constraintTop_toBottomOf="@id/correo"
        app:layout_constraintLeft_toRightOf="@id/phone"
       />
    <ImageView
        android:id="@+id/me_gusta"
        android:layout_width="@dimen/like_dimensions"
        android:layout_height="@dimen/like_dimensions"
        android:src="@drawable/megusta"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>